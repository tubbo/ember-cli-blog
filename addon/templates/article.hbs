<article id=id>
  <header>
    <h1 class="title">
      {{link-to title 'article' year month day name}}
    </h1>
  </header>

  <main>
    {{body}}
  </main>

  <footer>
    <p class="large-6 columns">
      Posted <span class="date">{{formattedDate}}</span> in <span class="category">{{category}}</span>.
    </p>
    <div class="large-4 columns">&nbsp;</div>
    <p id="more-link" class="large-2 columns">
      {{#link-to 'article' year month day href class="tiny round secondary button"}}
        more &raquo;
      {{/link-to}}
    </p>
  </footer>
</article>
